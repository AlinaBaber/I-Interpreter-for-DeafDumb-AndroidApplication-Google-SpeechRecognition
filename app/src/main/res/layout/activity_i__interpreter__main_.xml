<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".I_Interpreter_Main_Activity"
    android:background="@mipmap/vectorblue"
    android:id="@+id/I_Interpreter_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Text Interpretation:"
        android:id="@+id/textView"
        android:textColor="#fafffe"
        android:textSize="30dp"
        android:layout_above="@+id/inputtext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputtext"
        android:textColor="#ffffff"
        android:hint="Enter input text."
        android:textColorHint="#bac4ff"
        android:layout_above="@+id/speak"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/speak"
        android:onClick="doSomething"
        android:background="@drawable/speak1"
        android:layout_above="@+id/textView2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/stopspeak"
        android:onClick="doSomething"
        android:background="@drawable/stop"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speech Interpretation:"
        android:id="@+id/textView2"
        android:textColor="#fafffe"
        android:textSize="30dp"
        android:layout_above="@+id/mic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resulttext"
        android:textColor="#ffffff"
        android:textColorHint="#b8b7ff"
        android:hint="Enter Voice input then check result here."
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/mic"
        android:onClick="onButtonClick"
        android:shadowColor="#d9d1ff"
        android:singleLine="false"
        android:background="@drawable/mic1"
        android:layout_above="@+id/resulttext" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button"
        android:background="@drawable/cancel1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button2"
        android:background="@drawable/help1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button3"
        android:background="@drawable/erase1"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/mic"
        android:layout_toEndOf="@+id/mic" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/info2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/hand1"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/imageButton" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton"
        android:background="@drawable/hand1"
        android:layout_alignTop="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/name1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button4"
        android:background="@drawable/refresh1"
        android:layout_above="@+id/resulttext"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button5"
        android:background="@drawable/refresh1"
        android:layout_below="@+id/inputtext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/button6"
        android:background="@drawable/cam1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

</RelativeLayout>
